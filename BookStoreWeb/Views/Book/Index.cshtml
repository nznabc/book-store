@using Models

@model List<Book>

@{
    ViewData["Title"] = "Book List";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class=col-6>
            <h1>Books List</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create
            </a>
            @*<button type="button" class="btn btn-outline-primary"><i class="bi bi-pen"></i>&nbsp; Edit</button>
                <button type="button" class="btn btn-outline-warning"><i class="bi bi-trash"></i> &nbsp; Remove</button>
                <button type="button" class="btn btn-outline-light" ><i class="bi bi-info-circle"></i>&nbsp; Info</button>*@
        </div>
    </div>

    <div class="row pt-4">
        <div class="col-12">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>IssueDate</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.IssueDate</td>
                            <td>@item.Author</td>
                            <td>
                                <a asp-controller="Book" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-light">
                                    <i class="bi bi-pencil"></i> &nbsp; Edit
                                </a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                    <i class="bi bi-trash"></i> &nbsp; Delete
                                </a>                                
                            </td>                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

